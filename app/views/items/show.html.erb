<h1><%= @dept.name %> - <%= @item.name %></h1>
<p><%= @item.discription %></p>
<h2>Comments</h2>
<hr/>
<% @item.reviews.each do |review| %>
  <%= render 'reviews/review', { review: review } %>
<% end %>
<%= link_to 'Edit Product', edit_dept_item_path([@dept, @item]) %>
<%= link_to 'Delete Product', [@dept, @item], method: :delete %>
<%= link_to "Back To Product", dept_items_path(@dept) %>
<%= link_to 'Add Review', new_item_review_path(@item) %>